<div class="container">
    <div class="row mt-5">
        <div class="col-md-6">
            <h1 class="text-center">Edit Product</h1>
        <form action="/admin/edit-products/{{product._id}}" method="post" enctype="multipart/form-data">
            <label>Name</label>
            <input type="text" name="Name" class="form-control" name="Name" value="{{product.Name}}" >
            

            <label>Category</label>
            <input type="text" name="Category" class="form-control" name="Category" value="{{product.Category}}" >

            <label>Price</label>
            <input type="text" name="Price" class="form-control" name="Price" value="{{product.Price}}" >

            <label>Description</label>
            <input type="text" name="Description" class="form-control" name="Description" value="{{product.Description}}" >

            <label>Image:</label>
           <img style="width:80px; height:80px" src="/product-images/{{product._id}}.jpg" id="imgView" class="p-2">
            <input type="file" name="Image" class="form-control" onchange="viewImage(event)">

            <button type="submit" class="btn btn-primary mt-4">Submit</button>
        </form>
        </div>
    </div>
</div>

<script>
    function viewImage(event){
        document.getElementById("imgView").src=URL.createObjectURL(event.target.files[0])
    }
</script>