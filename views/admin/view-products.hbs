<section>
  <div class="container mt-4">
            <div class="row">
            <a href="/admin/add-product" class="btn btn-success ">Add Product</a>
           </div>
      <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}  
          <tr>
            <th class="pt-5" scope="row" >{{@index}}</th>
            <td class="pt-5">{{this.Name}}</td>
            <td class="pt-5">{{this.Price}}</td>
            <td class="pt-5">{{this.Category}}</td>
            <td class="pt-5">{{this.Description}}</td>
            <td><img style="width:110px; height:110px" src="/product-images/{{this._id}}.jpg" alt=""></td>
            <td class="pt-5"><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
            <td class="pt-5"><a href="/admin/remove-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Name}}? ')" >Remove</a></td>

            
          </tr>
          {{/each}}

        </tbody>
      </table>

  </div>
</section>